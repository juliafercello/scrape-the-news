<div class="container">
  <div class="row">

    {{#if article}}
    {{#with article}}
    <div class="card m-3" style="width: 100%;">
      <div class="card-body">
        <a class="alert-primary" href={{link}} target="_blank">
          <h5 class="card-title mb-3">{{title}}</h5>
        </a>
        <div class="card-header">Comments</div>
        <ul class="list-group list-group-flush">
          {{#if comments}}
          {{#each comments}}
          <li class="list-group-item">{{comment}}
            <button class="btn btn-outline-secondary btn-sm delete float-right" data-id="{{id}}">Delete</button>
          </li>
          {{/each}}
          {{else}}
          <li class="list-group-item">No comments</li>
          {{/if}}
        </ul>
      </div>
      {{/with}}
      {{/if}}

    </div>
    </div>  

    <form>
      <div class="form-group float-none">
        <hr>
        <label for="articleComment">Leave a comment</label>
        <textarea class="form-control" id="articleComment" rows="3"></textarea>
        <button class="btn btn-outline-secondary comment mt-3" data-id="{{article.id}}">Submit</button>
      </div>
    </form>

</div>